<h3 class="ui header">{{t "forms.i-i-s-probadevyat-регистр-гостя-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-probadevyat-регистр-гостя-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-probadevyat-регистр-гостя-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-probadevyat-регистр-гостя-e.гость-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.гость
      displayAttributeName="фИО"
      autocomplete=true
      relationName="гость"
      projection="ГостьL"
      title=(t "forms.i-i-s-probadevyat-регистр-гостя-e.гость-caption")
      readonly=readonly
      componentName="гостьLookup"
      class=(if (v-get validationModel "гость" "isInvalid") "error")
      data-test-i-i-s-probadevyat-регистр-гостя-e-гость=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "гость" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-probadevyat-регистр-гостя-e.карта-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.карта
      displayAttributeName="кодКарты"
      autocomplete=true
      relationName="карта"
      projection="КартаL"
      title=(t "forms.i-i-s-probadevyat-регистр-гостя-e.карта-caption")
      readonly=readonly
      componentName="картаLookup"
      class=(if (v-get validationModel "карта" "isInvalid") "error")
      data-test-i-i-s-probadevyat-регистр-гостя-e-карта=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "карта" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.карта.комната.номерКомнаты
      class=(if (v-get validationModel.карта.комната "номерКомнаты" "isInvalid") "error")
      label=(t "forms.i-i-s-probadevyat-регистр-гостя-e.карта.комната.номерКомнаты-caption")
      data-test-i-i-s-probadevyat-регистр-гостя-e-карта-комната-номерКомнаты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.карта.комната "номерКомнаты" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-probadevyat-регистр-гостя-e.сотрудник-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудник
      displayAttributeName="фИО"
      autocomplete=true
      relationName="сотрудник"
      projection="СотрудникL"
      title=(t "forms.i-i-s-probadevyat-регистр-гостя-e.сотрудник-caption")
      readonly=readonly
      componentName="сотрудникLookup"
      class=(if (v-get validationModel "сотрудник" "isInvalid") "error")
      data-test-i-i-s-probadevyat-регистр-гостя-e-сотрудник=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудник" "message")}}
  </div>
</form>
